<div class="side-bar-header">
  <div class="header-name">
    <% if current_user %>
      <%= link_to current_user.name, edit_user_path(current_user) %>
    <% else %>
      <%= link_to "ログイン", new_user_session_path %>
    <% end %>
  </div>
  <div class="create-train">
    <%= link_to "路線名を作成する", new_train_path %>
  </div>
</div>

<div class="trains">
  <% if current_user %>
    <% if current_user.trains.any? %>
      <% current_user.trains.each do |train| %>
        <div class="train">
          <div class="train-name">
            <a href="#"><%= train.trainname.name %></a>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>No trains available</p>
    <% end %>
  <% else %>
    <% Train.all.each do |train| %>
      <div class="train">
        <div class="train-name">
          <a href="#"><%= train.trainname.name %></a>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
